<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
	 <TextView 
	    android:id="@+id/shopping_list_column1"
     	android:gravity="left"
        android:layout_width="400sp"
        android:layout_weight="7"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content"/>
	 <TextView 
	    android:id="@+id/shopping_list_column2"
        android:gravity="center"
        android:layout_width="60sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
     <TextView 
        android:id="@+id/shopping_list_column3"
        android:gravity="center"
        android:layout_width="70sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>
     <TextView 
        android:id="@+id/shopping_list_column4"
        android:gravity="center"
        android:layout_width="65sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
     <TextView 
        android:id="@+id/shopping_list_column5"
        android:gravity="center"
        android:layout_width="100sp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
     <TextView 
        android:id="@+id/shopping_list_column6"
        android:gravity="center"
        android:layout_width="70sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"/>
     <TextView 
        android:id="@+id/shopping_list_column7"
        android:gravity="center"
        android:layout_width="50sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"/>
     <TextView
        android:id="@+id/shopping_list_column8"
        android:gravity="center"
        android:layout_width="70sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"/>
</LinearLayout>